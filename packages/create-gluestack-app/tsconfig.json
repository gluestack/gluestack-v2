{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "outDir": "build",
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
